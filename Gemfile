source 'https://rubygems.org'

gem 'sinatra'

# We're using this for sinatra auto-reloading
gem 'sinatra-contrib'

# We're using this for API calls
gem 'httparty'

# We're using this for calculating the difference between two files
gem 'diffy'

# We're using this for image manipulation
gem 'rmagick'

# We're using this for pulling random quotes from a gem
gem 'i_heart_quotes'
